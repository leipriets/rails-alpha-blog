<h1 class="text-center mt-4"> Create a new category </h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <!-- Validation Errors -->
            <%= render 'shared/errors', obj: @category %>

            <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-white rounded", local: true) do |f| %>

                <div class="form-group row mb-3">
                    <%= f.label :name, "Category name", class: "col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter your name" %> 
                    </div>
                </div>

                <div class="form-group row justify-content-center mb-3">
                    <div class="col-4">
                        <%= f.submit class: "btn btn-outline-success btn-lg" %>
                    </div>
                </div>

            <% end %>
        </div>

    </div>

    <div class="d-flex justify-content-center mb-3">
        <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-primary" %>
    </div>
        

</div>
